<% if @member.errors.size.positive? %>
  $('#members .form-wrapper .error').text('<%=j(@member.errors.full_messages.to_sentence)%>');
<% else %>
  $('#members .form-wrapper .error').text('');
  var html="<%= j(render(partial: 'image/os_images/private/members/item', locals: {image: @image, member: @member })) %>"


  if($("table#members tr[data-empty]").length==1) {
    $("table#members tr[data-empty]").replaceWith(html);
  } else {
    $("table#members tbody").prepend(html);
  }
  $('#members .form-wrapper').fadeOut();
<% end %>
